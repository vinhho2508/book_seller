extends layout
block content
    h1= title
    link(rel='stylesheet', type='text/css', href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", media='all')
    .album.py-5.bg-light
      .container
        .row
        each book in book_list
          .col-md-4
            .card.mb-4.box-shadow
              img.card-img-top(alt='Thumbnail [70%x225]', style='height: 150px; width: 100%; display: block;', src=book.picture, data-holder-rendered='true')
              .card-body
                p.card-text
                a(href=book.url) #{book.title}
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                    button.btn.btn-sm.btn-outline-secondary(type='button') Add to cart
                  big.text-muted #{book.price}$
          